{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ESNext"
    ],                         
    "module": "commonjs",
    "outDir": "./dist",                        
    "resolveJsonModule": true,
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,
    "jsx": "react",      
    "experimentalDecorators": true,              
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}